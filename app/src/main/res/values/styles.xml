<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoteListCardStyle" parent="Base.CardView">
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/large_margin</item>
    </style>

    <style name="EditTextNoteDetail">
        <item name="android:layout_marginLeft">@dimen/large_margin</item>
        <item name="android:layout_marginRight">@dimen/large_margin</item>
        <item name="android:layout_marginBottom">@dimen/large_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="android:textColorHint">@color/darkText</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

</resources>
